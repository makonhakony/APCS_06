@using Microsoft.Owin.Security
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <title>@ViewBag.Title - MEVO</title>

    <link href="https://fonts.googleapis.com/css?family=Lato|Noto+Sans+JP" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Aubrey">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Bad+Script">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Barlow">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Bitter:400,700">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Harmattan">

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>

<body>
    <div class="wrapper">
        <header>
            @if (Request.IsAuthenticated)
            {
                <link href="~/Content/header-main-user.css" rel="stylesheet" />
                <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
                <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
                <nav>
                    <div class=" wrapper-header">
                        <div class="head-tag">
                            <div class="menu-left">
                                <ul>
                                    <li><img src="~/Content/imgsrc/Untitled-1-2.png" class="logo"></li>
                                    <li><a class="explore" href="Explore.html">Explore</a></li>
                                    <li>
                                        <label for="search-field" style="color: white"><i class="fa fa-search"></i></label>
                                        <form class="form-inline" target="_self">
                                            <input class="search-field" type="search" name="search" id="search-field" placeholder="Search">
                                        </form>
                                    </li>

                                </ul>
                            </div>


                            <div class="menu-right-icon">
                                <ul>
                                    <li><img src="~/Content/imgsrc/avatar_square_blue_512dp.png" class="ava"></li>
                                    <li><a class="home" href="#">Home</a></li>
                                    <li class="comment"><i class="far fa-comment"></i></li>
                                    <li class="notification"><i class="far fa-bell"></i></li>
                                    <li class="setting"><i class="fas fa-cog"></i></li>
                                    <li>
                                        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            <a href="javascript:document.getElementById('logoutForm').submit()">Logout</a>
                                        }

                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </nav>

            }
            else
            {
                <link href="~/Content/header-main.css" rel="stylesheet" />
                <nav>
                    <div class=" wrapper-header">
                        <div class="head-tag">
                            <div class="menu-left">
                                <ul>
                                    <li><img src="~/Content/imgsrc/Untitled-1-2.png" class="logo"></li>
                                    <li><a class="explore" href="Explore.html">Explore</a></li>
                                    <li>
                                        <label for="search-field" style="color: white"><i class="fa fa-search"></i></label>
                                        <form class="form-inline" target="_self">
                                            <input class="search-field" type="search" name="search" id="search-field" placeholder="Search">
                                        </form>
                                    </li>

                                </ul>
                            </div>


                            <div class="menu-right-icon">
                                <ul>
                                    <li><a class="home" href="@Url.Action("Index","Home")">Home</a></li>
                                    <li><a class="login" href="@Url.Action("Login","Account")">Log in</a></li>
                                    <li><a class="login" href="@Url.Action("AjaxLogin","Account")">Ajax Log in</a></li>
                                    <li><a class="sign-up" href="@Url.Action("Register", "Account")">Sign up</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </nav>
            }

        </header>

        @RenderBody()
    </div>
    @RenderSection("scripts", required: false)
</body>

</html>
